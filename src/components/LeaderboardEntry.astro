---
interface Props {
  id: number;
  name: string;
  title: string;
  party: string;
  state: string;
  tier: string;
  score: number;
  lastAction: string;
  lastActionDate: string;
  sourceUrl: string;
}

const { id, name, title: role, party, state, tier, score, lastAction, lastActionDate, sourceUrl } = Astro.props;
const base = import.meta.env.BASE_URL;

const tierConfig: Record<string, { bg: string; border: string; badge: string; badgeText: string; label: string }> = {
  champion: { bg: 'bg-green-50', border: 'border-green-200', badge: 'bg-green-100 text-green-700', badgeText: 'Champion', label: 'text-green-700' },
  silent: { bg: 'bg-gray-50', border: 'border-gray-200', badge: 'bg-gray-100 text-gray-600', badgeText: 'Silent', label: 'text-gray-600' },
  enabler: { bg: 'bg-red-50', border: 'border-red-200', badge: 'bg-red-100 text-red-700', badgeText: 'Enabler', label: 'text-red-700' },
};

const config = tierConfig[tier] || tierConfig.silent;

const partyLabel: Record<string, string> = { R: 'Republican', D: 'Democrat', I: 'Independent' };
const partyColor: Record<string, string> = { R: 'text-red-600', D: 'text-blue-600', I: 'text-purple-600' };

const formattedDate = new Date(lastActionDate + 'T00:00:00').toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const scoreBarWidth = Math.abs(score);
const scoreBarColor = score >= 0 ? 'bg-green-500' : 'bg-red-500';
---

<div class={`card p-5 ${config.bg} border ${config.border} leaderboard-entry`} data-tier={tier}>
  <div class="flex items-start justify-between mb-3">
    <div>
      <div class="flex items-center gap-2 mb-1">
        <h3 class="font-bold text-navy-800">{name}</h3>
        <span class={`text-xs font-medium px-2 py-0.5 rounded-full ${config.badge}`}>{config.badgeText}</span>
      </div>
      <p class="text-sm text-gray-600">
        {role} &middot; <span class={partyColor[party]}>{partyLabel[party] || party}</span> &middot; {state}
      </p>
    </div>
    <div class="text-right">
      <div class={`text-2xl font-black ${score >= 0 ? 'text-green-600' : 'text-red-600'}`}>
        {score > 0 ? '+' : ''}{score}
      </div>
      <div class="text-xs text-gray-400">Score</div>
    </div>
  </div>

  <!-- Score bar -->
  <div class="w-full h-1.5 bg-gray-200 rounded-full mb-3">
    <div class={`h-full rounded-full ${scoreBarColor}`} style={`width: ${scoreBarWidth}%`}></div>
  </div>

  <p class="text-sm text-gray-600 mb-2">{lastAction}</p>

  <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-200/50">
    <div class="flex items-center gap-3">
      <time class="text-xs text-gray-400">{formattedDate}</time>
      <a href={sourceUrl} target="_blank" rel="noopener noreferrer" class="text-xs text-navy-600 hover:text-navy-800 font-medium">
        Source
      </a>
    </div>
    <div class="flex gap-2">
      {tier === 'champion' && (
        <a href={`${base}take-action?action=thank&name=${encodeURIComponent(name)}`} class="text-xs font-medium px-3 py-1.5 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
          Thank Them
        </a>
      )}
      {tier === 'silent' && (
        <a href={`${base}take-action?action=urge&name=${encodeURIComponent(name)}`} class="text-xs font-medium px-3 py-1.5 bg-navy-800 text-white rounded-lg hover:bg-navy-700 transition-colors">
          Urge Them
        </a>
      )}
      {tier === 'enabler' && (
        <a href={`${base}take-action?action=callout&name=${encodeURIComponent(name)}`} class="text-xs font-medium px-3 py-1.5 bg-accent-red text-white rounded-lg hover:bg-accent-red-dark transition-colors">
          Call Them Out
        </a>
      )}
    </div>
  </div>
</div>
