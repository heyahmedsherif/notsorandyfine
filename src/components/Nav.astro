---
const base = import.meta.env.BASE_URL;
const pathname = Astro.url.pathname;

const links = [
  { href: '', label: 'Home' },
  { href: 'evidence', label: 'Evidence' },
  { href: 'take-action', label: 'Take Action' },
  { href: 'accountability', label: 'Accountability' },
];
---

<nav id="main-nav" class="bg-navy-800 text-white sticky top-0 z-50 transition-shadow duration-300">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href={base} class="text-xl font-black tracking-tight hover:opacity-90 transition-opacity">
        <span class="text-accent-red">#</span>NotSoRandyFine
      </a>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-1">
        {links.map(link => {
          const href = `${base}${link.href}`;
          const isActive = pathname === href || pathname === `${href}/`;
          return (
            <a
              href={href}
              class:list={[
                'px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200',
                isActive ? 'bg-navy-600 text-white shadow-inner-glow' : 'text-navy-200 hover:text-white hover:bg-navy-700',
              ]}
            >
              {link.label}
            </a>
          );
        })}
        <a href={`${base}take-action`} class="ml-2 btn-primary text-sm !py-2 !px-4">
          Email Your Reps
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-navy-700 transition-colors" aria-label="Open menu">
        <svg id="icon-menu" class="w-6 h-6 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="icon-close" class="w-6 h-6 hidden transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile nav -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {links.map(link => {
        const href = `${base}${link.href}`;
        const isActive = pathname === href || pathname === `${href}/`;
        return (
          <a
            href={href}
            class:list={[
              'block px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200',
              isActive ? 'bg-navy-600 text-white' : 'text-navy-200 hover:text-white hover:bg-navy-700',
            ]}
          >
            {link.label}
          </a>
        );
      })}
      <a href={`${base}take-action`} class="block mt-2 btn-primary text-sm text-center">
        Email Your Reps
      </a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconMenu = document.getElementById('icon-menu');
  const iconClose = document.getElementById('icon-close');
  const nav = document.getElementById('main-nav');

  btn?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    if (isOpen) {
      iconMenu?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
    } else {
      iconMenu?.classList.add('hidden');
      iconClose?.classList.remove('hidden');
      menu?.classList.add('animate-slide-down');
    }
  });

  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      nav?.classList.add('shadow-nav');
    } else {
      nav?.classList.remove('shadow-nav');
    }
  }, { passive: true });
</script>
